<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>org.blynder</groupId>
	<artifactId>blynder</artifactId>
	<version>0.4.3</version>
	<packaging>jar</packaging>
	
	<name>Blynder</name>
	<description>
	A framework that allows the user to create desktop applications with web languages (HTML, JavaScript and
	CSS), swing and JavaFX.
	</description>
	<url>http://www.blynder.org/</url>
	
	<distributionManagement>
	  	<snapshotRepository>
	    	<id>ossrh</id>
	    	<url>https://oss.sonatype.org/content/repositories/snapshots</url>
	  	</snapshotRepository>
	  	<repository>
	    	<id>ossrh</id>
	    	<url>https://oss.sonatype.org/service/local/staging/deploy/maven2</url>
	  	</repository>
	</distributionManagement>
	
	<licenses>
		<license>
		    <name>MIT License</name>
		    <url>http://www.opensource.org/licenses/mit-license.php</url>
		</license>
	</licenses>
	
	<developers>
		<developer>
			<name>Alejandro Garcia</name>
			<email>alexgp1234@gmail.com</email>
			<organization>None</organization>
			<organizationUrl>http://www.blynder.org</organizationUrl>
		</developer>
	</developers>
	
	<scm>
		<connection>scm:git:git://github.com/AlexGPlay/Blynder.git</connection>
	  	<developerConnection>scm:git:ssh://github.com:AlexGPlay/Blynder.git</developerConnection>
	  	<url>http://github.com/AlexGPlay/Blynder/tree/master</url>
	</scm>
	
	<dependencies>
		 <dependency>
			 <groupId>org.thymeleaf</groupId>
			 <artifactId>thymeleaf</artifactId>
			 <version>3.0.11.RELEASE</version>
		 </dependency>
		 
		<dependency>
	        <groupId>org.slf4j</groupId>
	        <artifactId>slf4j-api</artifactId>
	        <version>1.7.25</version>
    	</dependency>
    	
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.5.10</version>
		</dependency>
		
		<dependency>
		    <groupId>com.fasterxml.jackson.core</groupId>
		    <artifactId>jackson-databind</artifactId>
		    <version>2.12.7.1</version>
		</dependency>
    	
		<dependency>
		    <groupId>junit</groupId>
		    <artifactId>junit</artifactId>
		    <version>4.12</version>
		    <scope>test</scope>
		</dependency>
    	
    	
	</dependencies>
	
	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>
  
	<build>
		<plugins>
			<plugin>    
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
		  		<groupId>org.apache.maven.plugins</groupId>
			  	<artifactId>maven-source-plugin</artifactId>
			  	<executions>
			    	<execution>
			      		<id>attach-sources</id>
			      		<goals>
			        		<goal>jar</goal>
			      		</goals>
			    	</execution>
			  	</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
			  	<artifactId>maven-javadoc-plugin</artifactId>
			  	<executions>
			    	<execution>
			      		<id>attach-javadocs</id>
			      		<goals>
			        		<goal>jar</goal>
			      		</goals>
			    	</execution>
			  	</executions>
			</plugin>
      		<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-gpg-plugin</artifactId>
        		<version>1.6</version>
        		<executions>
          			<execution>
            			<id>sign-artifacts</id>
            			<phase>verify</phase>
            			<goals>
             				 <goal>sign</goal>
            			</goals>
          			</execution>
        		</executions>
      		</plugin>
		</plugins>
	</build>
</project>